{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "lib": [
      "esnext.array"
    ],
    "paths": {
      "*": [
        "../node_modules/*"
      ]
    },
    "typeRoots": ["../node_modules/@types"]
  },
  "include": ["src", "../hbt-common"]
}